# Language specific processing of speller fst's:
generator-speller-gt-norm.%: analyser-speller-gt-norm.tmp.%    \
		$(top_builddir)/src/filters/remove-rel_focus-strings.% \
		$(top_builddir)/src/filters/remove-homonymy-tags.%     \
		$(top_builddir)/src/filters/remove-test-tags.%
	$(AM_V_XFST_TOOL)$(PRINTF) "read regex                                    \
			@\"$(top_builddir)/src/filters/remove-rel_focus-strings.$*\"    \
		.o. @\"$(top_builddir)/src/filters/remove-homonymy-tags.$*\"        \
		.o. @\"$(top_builddir)/src/filters/remove-test-tags.$*\"            \
		.o. @\"$<\" \
		; \n\
		save stack $@\n\
		quit\n" | $(XFST_TOOL)

analyser-speller-gt-norm.%: analyser-speller-gt-norm.tmp.%  \
		$(top_builddir)/src/filters/remove-rel_focus-strings.% \
		$(top_builddir)/src/filters/remove-homonymy-tags.%     \
		$(top_builddir)/src/filters/remove-test-tags.%         \
		$(top_builddir)/src/filters/remove-hyphenation-marks.% \
		$(top_builddir)/src/filters/remove-infl_deriv-borders.%
	$(AM_V_XFST_TOOL)$(PRINTF) "read regex                                    \
			@\"$(top_builddir)/src/filters/remove-rel_focus-strings.$*\"    \
		.o. @\"$(top_builddir)/src/filters/remove-homonymy-tags.$*\"        \
		.o. @\"$(top_builddir)/src/filters/remove-test-tags.$*\"            \
		.o. @\"$<\" \
		; \n\
		$(INVERT_HFST)\
		save stack $@\n\
		quit\n" | $(XFST_TOOL)

